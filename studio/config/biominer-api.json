          "uploader": {
            "type": "string"
          },
          "urls": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/URL"
            }
          },
          "hashes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Hash"
            }
          },
          "aliases": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Alias"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          }
        }
      },
      "FilePage": {
        "type": "object",
        "required": [
          "records",
          "total",
          "pages",
          "page_no",
          "page_size",
          "search_count"
        ],
        "properties": {
          "records": {
            "type": "array",
            "description": "data",
            "items": {
              "$ref": "#/components/schemas/File"
            }
          },
          "total": {
            "type": "integer",
            "format": "uint64",
            "description": "total num"
          },
          "pages": {
            "type": "integer",
            "format": "uint64",
            "description": "pages"
          },
          "page_no": {
            "type": "integer",
            "format": "uint64",
            "description": "current page index"
          },
          "page_size": {
            "type": "integer",
            "format": "uint64",
            "description": "default 10"
          },
          "search_count": {
            "type": "boolean",
            "description": "is search_count"
          }
        }
      },
      "FileStat": {
        "type": "object",
        "required": [
          "total_size",
          "num_of_files",
          "num_of_baseid",
          "version",
          "registry_id"
        ],
        "properties": {
          "total_size": {
            "type": "integer",
            "format": "uint64"
          },
          "num_of_files": {
            "type": "integer",
            "format": "uint64"
          },
          "num_of_baseid": {
            "type": "integer",
