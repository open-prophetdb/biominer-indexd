        "properties": {
          "id": {
            "type": "integer",
            "format": "uint64"
          },
          "url": {
            "type": "string"
          },
          "created_at": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "string"
          },
          "uploader": {
            "type": "string"
          }
        }
