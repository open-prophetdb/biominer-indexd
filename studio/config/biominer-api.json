          "filename": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "format": "uint64"
          },
          "created_at": {
            "type": "integer",
            "format": "int64"
          },
          "updated_at": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "string"
          },
          "baseid": {
            "type": "string"
          },
          "rev": {
            "type": "string"
