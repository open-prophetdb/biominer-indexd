        "properties": {
          "field_names": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Hash": {
        "type": "object",
        "required": [
          "id",
          "hash_type",
          "hash"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "uint64",
            "readOnly": true
          },
          "hash_type": {
            "type": "string",
            "maxLength": 16
          },
          "hash": {
            "type": "string",
            "maxLength": 128
          }
        }
      },
