        "properties": {
          "id": {
            "type": "integer",
            "format": "uint64",
            "readOnly": true
          },
          "field_name": {
            "type": "string",
            "maxLength": 128
          },
          "field_value": {
            "type": "string",
            "maxLength": 128
          }
        }
      },
      "URL": {
        "type": "object",
        "required": [
          "id",
          "url",
          "created_at",
          "status",
          "uploader"
